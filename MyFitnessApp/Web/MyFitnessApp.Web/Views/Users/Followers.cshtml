@model MyFitnessApp.Web.ViewModels.Users.AllFollowerFolloweeViewModel

@{ this.ViewData["Title"] = "Followers"; }

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="main-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/Profiles/MyProfile">My Profile</a></li>
        <li class="breadcrumb-item active" aria-current="page"><strong>@this.ViewData["Title"]</strong></li>
    </ol>
</nav>
<!-- /Breadcrumb -->

<div class="row">
    @if (this.Model.FollowerFollowees.Count() == 0)
    {
        <div class="col text-center">
            <h5>Nobody follows you</h5>
        </div>
    }
    @foreach (var follower in this.Model.FollowerFollowees)
    {
        <div class="col-lg-3 offset-lg-0 col-xl-3 offset-xl-0 col-md-4 offset-md-0 col-sm-6 offset-sm-3 col-8 offset-2  text-center">
            <a asp-controller="Profiles" asp-action="UsersProfile" asp-route-username="@follower.Username">
                <div class="card-header border border-dark mt-4 text-center">
                    <div class="media flex-wrap w-100 align-items-center">
                        <div class="col">
                            <img src="@follower.ImageUrl" class="rounded-circle text-center" width="150">
                            <div class="media-body text-center">
                                <div class="text-muted">
                                    <strong>Username:</strong> @follower.Username
                                </div>
                                <div class="text-muted">
                                    <strong>First name:</strong> @follower.FirstName
                                </div>
                                <div class="text-muted">
                                    <strong>Last name:</strong> @follower.LastName
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>