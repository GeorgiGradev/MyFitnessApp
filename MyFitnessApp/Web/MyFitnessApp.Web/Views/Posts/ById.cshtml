@model PostViewModel


@{ 
    var userId = User.GetId();
}

<h1>@Model.Title</h1>
<div class="container-fluid mt-100">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="media flex-wrap w-100 align-items-center">
                        <img src="https://res.cloudinary.com/dxfq3iotg/image/upload/v1574583246/AAA/2.jpg" class="d-block ui-w-40 rounded-circle" alt="">
                        <div class="media-body ml-3">
                            @Model.AddedByUserUserName
                            <div class="text-muted small">
                                <strong>Created on</strong> @Model.CreatedOn.ToString("f")
                            </div>
                            <div class="text-muted small">
                                <strong>Member since</strong> @Model.AddedByUserCreatedOn.ToString("dddd, dd MMMM yyyy")
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <article>
                        @Model.Content
                    </article>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p>Are you sure you want to remove "@Model.Title" from your articles ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="deleteForm.submit()">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>



