@model AllCategoriesViewModel

@{
    this.ViewData["Title"] = "Forum";
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="main-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page"><strong>@this.ViewData["Title"]</strong></li>
    </ol>
</nav>
<!-- /Breadcrumb -->

<div class="col-xl-10 col-md-10 col-sm-10 col-10 offset-1">
    <div class="text-center">
        <a asp-controller="Posts" asp-action="Create" class="btn btn-primary btn-outline-light m-4">Create new post</a>
    </div>

    <ol class="list-group list-group-numbered">
        @foreach (var category in Model.Categories)
        {
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <a href="@category.Url">
                        <div class="font-weight-bold"> @category.Name</div>
                    </a>
                    <div>@category.Description</div>
                    @*<span class="badge bg-light rounded-right font-italic">Last post: ..:..:.. Day/Month/Year by .............  (view component)</span>*@
                </div>
                <span class="badge bg-light rounded-right font-weight-bold">Posts: @category.Posts.Count()</span>
            </li>
        }
    </ol>
</div>