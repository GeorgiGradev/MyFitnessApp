@model MyFitnessApp.Web.ViewModels.Search.AllExercisesViewModel

@{
    this.ViewData["Title"] = "Found exercises";
}


<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="main-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/Exercises/All">All exercises</a></li>
        <li class="breadcrumb-item active" aria-current="page"><strong>@this.ViewData["Title"]</strong></li>
    </ol>
</nav>
<!-- /Breadcrumb -->


<div class="row">
    @foreach (var exercise in this.Model.Exercises.OrderBy(x => x.Name))
    {
        <div class="col-xl-4 col-md-6 col-sm-9 col-9 text-center">
            <a asp-controller="Exercises" asp-action="Add" asp-route-id="@exercise.Id">
                <div class="card-header col-md border border-dark mt-2 text-center">
                    <div class="media flex-wrap w-100 align-items-center">
                        <div class="col">
                            <div class="media-body text-center">
                                <div class="row mb-2 text-center">
                                    <div class="col">
                                        <strong>@exercise.Name</strong>
                                    </div>
                                </div>
                                <div class="row text-center">
                                    <div class="col">
                                        <img src="@exercise.ImageUrl" width="220">
                                        <div class="text-muted">
                                            Category: <strong> @exercise.CategoryName</strong>
                                        </div>
                                        <div class="text-muted">
                                            Difficulty: <strong>@exercise.DifficultyName</strong>
                                        </div>
                                        <div class="text-muted">
                                            Equipment: <strong>@exercise.EquipmentName</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<hr />

<div class="text-center">
    <a asp-controller="Search" asp-action="SearchExercise" class="btn btn-primary btn-outline-light m-2">Search again</a>
</div>