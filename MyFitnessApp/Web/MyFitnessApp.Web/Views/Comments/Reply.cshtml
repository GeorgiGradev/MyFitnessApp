@model MyFitnessApp.Web.ViewModels.Comments.CreateCommentInputModel

@{
    this.ViewData["Title"] = "Write a comment";
}

<div class="container">
    <div class="row">
        <div class="offset-lg-2 col-lg-8 col-sm-12 offset-xl-3 col-xl-6">
            <h2 class="heading-margin text-center">@this.ViewData["Title"]</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Content"></label>
                    <textarea asp-for="Content" class="form-control" rows="14" placeholder="Content here..."></textarea>
                    <span asp-validation-for="Content" class="small text-danger"></span>
                </div>
                <input class="btn btn-primary float-right mt-3" type="submit" value="Add comment" />
            </form>
        </div>
    </div>
</div>