
@model ExerciseViewModel

@{
    this.ViewData["Title"] = "Exercise";
}

<div class="container">
    <h1 class="text-center">@Model.Name</h1>
    <div class="row">
        <div class="col-md-6">
            <p class="img"">
                <img src="@Model.ImageUrl" class="img-fluid" alt="Responsive image" />
            </p>
        </div>
        <hr />
        <div class="col-md-6">
            <p class="item-description">
               Description: @Model.Description
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" src="@Model.VideoUrl" allowfullscreen></iframe>
            </div>
        </div>
        <div class="col-md-6">
            <p class="text-black-50">
                Equipment: @Model.EquipmentName
            </p>
        </div>
    </div>
    <hr />
    <input class="btn btn-primary float-md-none" type="submit" value="Add to my exercises" />
</div>