@model CreateExerciseInputModel

@{
    ViewData["Title"] = "Add new exercise";
}

<div class="container">
    <div class="row">
        <div class="offset-lg-2 col-lg-8 col-sm-12 offset-xl-3 col-xl-6" >
            <h2 class="heading-margin text-center">Add new exercise</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="exercise name...">
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="description name..."></textarea>
                </div>


                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control" >
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="image url....">
                </div>
                <div class="form-group">
                    <label asp-for="VideoUrl"></label>
                    <input asp-for="VideoUrl" class="form-control" placeholder="video url....">
                </div>

                <input class="btn btn-primary float-right" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>

