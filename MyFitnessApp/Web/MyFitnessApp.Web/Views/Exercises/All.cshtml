@*View, което визуализира All exercises*@


@model AllExercisesViewModel

@{
    this.ViewData["Title"] = "All exercises / Page " + Model.PageNumber;
}


<div>
    <h1 class="text-center">@this.ViewData["Title"]</h1>
    <div class="row">
        @foreach (var exercise in Model.Exercises)
        {
            <div class="media col-md-4">
                @*Да заемат 3/12 от екрана*@
                <img src="@exercise.ImageUrl" width="250" class="mr-3 img-responsive"> @*В "width" се уточнява размера на снимката, "ing-reponsive я прави reponsive"*@
                <div class="media-body">
                    <h5 class="mt-0">@exercise.Name</h5>
                    @exercise.CategoryName
                </div>
            </div>
        }
    </div>
</div>

<hr /> @*Разделител между горния и долния елемент*@

<partial name="_PagingPartial" model="@Model" />  @*Тук поставяме _PartialView-то за Paging*@
