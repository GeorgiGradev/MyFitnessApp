@model AllExercisesViewModel

@{
    this.ViewData["Title"] = "All exercises";
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="main-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/Exercises/Categories">Exercise by muscle group</a></li>
        <li class="breadcrumb-item active" aria-current="page"><strong>@this.ViewData["Title"]</strong></li>
    </ol>
</nav>
<!-- /Breadcrumb -->

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        <strong>@this.TempData["Message"]</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="container-fluid">
    <div class="row">
        @foreach (var exercise in Model.Exercises)
        {
            <div class="col-xl-4 col-md-6 col-sm-9 col-9 text-center">
                <a asp-controller="Exercises" asp-action="Add" asp-route-id="@exercise.Id">
                    <div class="card-header col-md border border-dark mt-2 text-center">
                        <div class="media flex-wrap w-100 align-items-center">
                            <div class="col">
                                <div class="media-body text-center">
                                    <div class="row mb-2 text-center">
                                        <div class="col">
                                            <strong>@exercise.Name</strong>
                                        </div>
                                    </div>
                                    <div class="row text-center mb-2">
                                        <div class="col">
                                            <img src="@exercise.ImageUrl" width="220">
                                            <div class="text-muted">
                                                Category: <strong> @exercise.CategoryName</strong>
                                            </div>
                                            <div class="text-muted">
                                                Difficulty: <strong>@exercise.Difficulty</strong>
                                            </div>
                                            <div class="text-muted">
                                                Equipment: <strong>@exercise.EquipmentName</strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<hr />

<partial name="_ExercisesPagingPartial" model="@Model" />
