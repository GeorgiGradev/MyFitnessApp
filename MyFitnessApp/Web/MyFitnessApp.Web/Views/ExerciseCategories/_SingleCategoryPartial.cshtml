
@model AllExercisesViewModel

<div class="row">
    @foreach (var exercise in Model.Exercises)
    {
        <div class="col-md-4 mt-3">
            <div class="card text-center alert-info" style="width: 18rem;">
                <a  asp-controller="Exercises" asp-action="Add" asp-route-id="@exercise.Id">
                    <img src="@exercise.ImageUrl" class="card-img-top">
                </a>
                <div class="card-body">
                    <h5 class="card-title"> <a asp-controller="Exercises" asp-action="Add" asp-route-id="@exercise.Id">@exercise.Name</a></h5>
                </div>
            </div>
        </div>
    }
</div>




